#header
  text-shadow 0 0 1px #fff
  margin 50px auto
  a
    color #888
    &:hover
      color color-link
      text-decoration none
  .subtitle
    color #888

    
  h1
    padding 0px 0px 0px 20px
    font-weight normal
    font-size 35px
    line-height 1

  h2
    padding 0px 0px 0px 20px
    font-weight normal
    font-size 20px
    line-height 1
    margin-top 10px
  
  #main-nav
    font-family font-title
    line-height 2.5em
    ul
      list-style none
      li
        padding 0px 6px 0px 0px
        font-size 20px
        float left
        margin-left 30px
